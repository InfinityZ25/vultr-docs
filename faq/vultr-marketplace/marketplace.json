{
    "variables": {
        "vultr_api_key": "{{ env `VULTR_API_KEY` }}"
    },
    "sensitive-variables": [
        "vultr_api_key"
    ],
    "builders": [{
        "type": "vultr",
        "api_key": "{{ user `vultr_api_key` }}",
        "snapshot_description": "Marketplace Test {{isotime \"2006-01-02 15:04\"}}",
        "region_id": "ewr",
        "plan_id": "vc2-1c-1gb",
        "os_id": "387",
        "ssh_username": "root",
        "state_timeout": "15m"
    }],
    "provisioners": [{
            "type": "file",
            "source": "per-instance-provision.sh",
            "destination": "/tmp/per-instance-provision.sh"
        },
        {
            "type": "file",
            "source": "per-boot-setup.sh",
            "destination": "/tmp/per-boot-setup.sh"
        },
        {
            "type": "shell",
            "script": "setup-snapshot.sh"
        }
    ],
    "post-processors": [{
            "type": "shell-local",
            "inline": ["echo Marketplace build has finished. > /root/mkt-builder.log"]
        }
    ]
}
